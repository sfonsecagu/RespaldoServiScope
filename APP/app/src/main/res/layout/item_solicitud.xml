<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imagen_solicitud"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_business_cente">

            </ImageView>

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/imagen_solicitud"
                android:layout_toRightOf="@+id/imagen_solicitud"
                android:text="Nombre de Solicitud"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagen_solicitud"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-67dp"
                android:layout_toEndOf="@id/imagen_solicitud"
                android:layout_toRightOf="@+id/imagen_solicitud"
                android:text="2000-30-23">

            </TextView>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>
