<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imagen_solicitudMi"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_business_cente"/>

        <TextView
            android:id="@+id/txtFechaMi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView41"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/imagen_solicitudMi"
            android:layout_toRightOf="@+id/imagen_solicitudMi"
            android:text="2000-30-23"/>

        <TextView
            android:id="@+id/txtDescripcionMi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView41"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="21dp"
            android:layout_toEndOf="@id/imagen_solicitudMi"
            android:layout_toRightOf="@+id/imagen_solicitudMi"
            android:text="DescripciÃ³n">

        </TextView>

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTituloMi"
            android:layout_marginStart="11dp"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@+id/imagen_solicitudMi"
            android:text="#" />

        <TextView
            android:id="@+id/txtId_solicitudMi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTituloMi"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/textView41"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtTituloMi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/imagen_solicitudMi"
            android:layout_toRightOf="@+id/imagen_solicitudMi"
            android:text="Nombre de Solicitud"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/txtId_UsuarioMI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="33dp"
            android:layout_marginTop="30dp"
            android:text="TextView" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>