<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@drawable/image">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView63"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="Menú Especialista"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/borde"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chats"
                android:layout_marginEnd="60dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="-60dp"
                app:srcCompat="@drawable/ic_chat" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/borde"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSolicitudes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solicitudes"
                android:layout_marginEnd="60dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="-60dp"
                app:srcCompat="@drawable/ic_solicitudes_esp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/borde"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSolicitarServicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solicitar un servicio"
                android:layout_marginEnd="60dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="-60dp"
                app:srcCompat="@drawable/ic_solicitudes" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/borde"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMisServicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mis Servicios"
                android:layout_marginEnd="60dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="-60dp"
                app:srcCompat="@drawable/ic_usr" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/borde"
                android:gravity="bottom|center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMetricas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Métricas"
                    android:layout_marginEnd="60dp"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#000000"/>
                <ImageView
                    android:id="@+id/imageView90"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="-60dp"
                    app:srcCompat="@drawable/ic_metricas" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>